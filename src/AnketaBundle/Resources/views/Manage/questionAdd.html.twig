{% extends 'AnketaBundle:Manage:layoutQuestion.html.twig' %}

{% block question_content %}
Forma na pridanie otazky: <br />
    <form action="#" method="post">
        <table>
            <tr>
                <td>
                    <label for="question">Otazka</label>
                </td>
                <td>
                    <input type="text" id="question" name="_question" value="{{ question.question }}" required="true" size="60" />
                    <br />
                </td>
            </tr>
            <tr>
                <td>
                    <label for="options">Moznosti:Hodnotenie</label>
                </td>
                <td>
                    <br />
                    {% for i in 1..10 %}
                        <input type="text" id="option{{ i }}" name="_option{{ i }}" size="50" /> :
                        <input type="text" id="eval{{ i }}" name="_eval{{ i }}" size="10" />
                        <br />
                    {% endfor %}
                    <br />
                </td>
            </tr>
            <tr>
                <td>
                    <label for="stars">Hodnotit hviezdami (moznosti budu ignorovane)</label>
                </td>
                <td>
                    <input type="checkbox" id="stars" name="_stars" />
                </td>
            </tr>
            <tr>
                <td>
                    <label for="category">Kategoria: </label>
                </td>
                <td>
                    <select name="_category">
                        {% for category in categories %}
                            <option value="{{ category.id }}">{{ category.type }}</option>
                        {% endfor %}
                    </select>
                </td>
            </tr>
        </table>
        <input type="submit" name="submit" value="submit" />
    </form>
{% endblock %}
