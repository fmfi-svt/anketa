{% if user is not empty %}
<span class="for-screen-readers">{{ trans('userbar.prihlaseny') }}: </span><span class="user-fullname" title="{{ user.login }}">{{ user.formattedName }}</span>
&mdash; <a href="{{ path('logout') }}" class="logout">{{ trans('userbar.odhlasit') }}</a>
{% else %}
<a href="{{ path('login', {'to': app.request.uri }) }}" class="login">{{ trans('userbar.prihlasit') }}</a>
{% endif %}
