{% extends 'AnketaBundle:Statistics:index.html.twig' %}

{% block navigation %}
    {% render "AnketaBundle:Statistics:menuVseobecne" with { 'season' : season } %}
{% endblock %}
{% block content %}
    {% for category in categories %}
        <h3>{{ category.description }}: </h3>
        <ul class="category-listing">
        {% for question in questions[category.id] %}
            <li><a href="{{ path('statistics_results_general', { 'season_slug': season.slug, 'question_id': question.id }) }}"
              >{{ question.question }}</a>
            </li>
        {% endfor %}
        </ul>
    {% endfor %}
{% endblock %}
